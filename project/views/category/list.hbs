<h3><a class="btn btn-secondary" href="/category"><i class="fa fa-plus"></i> Create New</a> Category List</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>For</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.categoryName}}</td>
            <td>{{this.categoryFor}}</td>
            <td>
                <a href="/category/{{this._id}}"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                <a href="/category/delete/{{this._id}}"
                    onclick="return confirm('Are you sure to delete this record ?');"><i class="fa fa-trash fa-lg"
                        aria-hidden="true"></i></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>